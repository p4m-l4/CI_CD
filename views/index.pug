doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Simple Calculator
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous')
h1.text-center.text-success Simple Calculator
.container.my-5.text-success
    .row
        .col-4
            .card.border(style='width: 18rem')
                .card-header.fs-5.fw-bold History
                if results
                    each result in results
                        ul.list-group.list-group-flush
                            li.list-group-item #{result.result}

        .col-8
            .form.border.border-success.p-5.w-75.shadow-lg.bg-white.rounded
                .screen.w-100.p-4.mb-5.bg-success.text-center.bg-opacity-25.fs-5.fw-bold
                    | #{result}
                form(action="/" method='post')
                    .mb-3.fs-5.fw-bold
                        label.form-label(for='exampleInputEmail1') First Number
                        input#num1.form-control(type='text' name='num1' aria-describedby='num1help' pattern='(\\d)*(\\.)?([0-9]{1,9})?' required)
                    .mb-3.fs-5.fw-bold
                        label.form-label(for='exampleInputEmail1') Operator (+, -, *, /)
                        input#operator.form-control(type='text' name='operator' aria-describedby='operatorhelp' required)
                    .mb-3.fs-5.fw-bold
                        label.form-label(for='exampleInputEmail1') Second Number
                        input#num2.form-control(type='text' name='num2' aria-describedby='num2help' pattern='(\\d)*(\\.)?([0-9]{1,9})?' required)
                    button.btn.btn-danger(type='submit') Calculate
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js' integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN' crossorigin='anonymous')
